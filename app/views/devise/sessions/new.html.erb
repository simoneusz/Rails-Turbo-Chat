<div class="login-container devise-container w-100">
  <div class="login-box devise-box">
    <h2 class="text-center text-white">Sign in to your account</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: "login-form devise-form" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label text-light" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label text-light" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label text-light" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn main-btn-primary login-btn devise-btn" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>