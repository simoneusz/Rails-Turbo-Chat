<div class="edit-container devise-container w-100">
  <div class="edit-box devise-box">
    <h2 class="text-center text-white">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: { method: :put, class: "edit-form devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-group gap-4 flex-nowrap flex-row">
        <div class="mb-3">
          <%= f.label :email, class: "form-label text-light" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :username, class: "form-label text-light" %>
          <%= f.text_field :username,
                           autocomplete: "username",
                           required: true,
                           class: "form-control",
                           readonly: true,
                           disabled: true %>
        </div>
      </div>

      <div class="input-group gap-4 flex-nowrap flex-row">
        <div class="mb-3">
          <%= f.label :first_name, class: "form-label text-light" %>
          <%= f.text_field :first_name, autocomplete: "first_name", required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :last_name, class: "form-label text-light" %>
          <%= f.text_field :last_name, autocomplete: "last_name", required: true, class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning text-light">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label text-light" %>
        <small class="text-white">(leave blank if you don't want to change it)</small>
        <% if @minimum_password_length %>
          <small class="text-white">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label text-light" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label text-light" %>
        <small class="text-white">(we need your current password to confirm your changes)</small>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <% if user_signed_in? %>
        <div class="mb-3">
          <%= f.label :avatar, "Upload Avatar", class: "form-label text-light" %>
          <%= f.file_field :avatar, class: "form-control" %>
          <% if current_user.avatar&.url.present? %>
            <div class="mt-2">
              <%= image_tag current_user.avatar.thumb.url, class: "img-thumbnail", alt: "User Avatar" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Update", class: "btn main-btn-primary edit-btn" %>
      </div>
    <% end %>

    <h3 class="text-center text-white mt-4">Cancel my account</h3>
    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name),
                    data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                    method: :delete, class: "btn btn-danger" %>
    </div>

    <div class="text-center mt-3">
      <%= link_to "Back", :back, class: "text-white" %>
    </div>
  </div>
</div>