<div class="form-group msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, class: "") do |f| %>
    <%= f.rich_text_area :content,
                         id: 'chat-text',
                         class: "form-control msg-content",
                         autocomplete: 'off',
                         data: {controller: 'trix'}
    %>
    <%= f.submit data: { disable_with: false }, class: "btn btn-primary" %>
  <% end %>
</div>