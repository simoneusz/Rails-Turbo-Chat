<button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
  <%= user&.email || room.name %>
  <span class="border">Type: <%= room.is_private ? "Private" : "Public" %></span>
  <span class="border">Name: <%= room.name %></span>
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content m-auto w-75">
      <%= render partial: "rooms/room_info/room_info_header" %>
      <%= render partial: "rooms/room_info/room_info_body", locals: { room: room, user: user } %>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>