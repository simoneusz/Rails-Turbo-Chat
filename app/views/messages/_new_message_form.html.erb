<div class="message-reply w-100 d-flex justify-content-between align-items-center"
     data-reply-target="replyBox"
     style="display: none !important;">
  <div class="message">
    <div class="d-block px-2">
      <div class="message-reply-box">
        <div class="message-reply-parent-content">
          <span data-reply-target="replyText"></span>
        </div>
      </div>
    </div>
  </div>

  <button type="button" class="btn-close" data-action="click->reply#clearReply"></button>
</div>

<%= content_tag(:div, class: 'trix-form border rounded form-group msg-form', data: { controller: 'emoji-picker', }) do %>
  <%= form_with(model: [@single_room, @message], remote: true,
                data: { controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset' }) do |f| %>
  <%= f.hidden_field :parent_message_id, value: "", data: { reply_target: "parentMessageId" } %>
    <%= content_tag(:div, '', class: 'pickerContainer', data: {
      emoji_picker_target: 'pickerContainer',
    }) %>
    <%= f.rich_text_area :content, id: 'chat-text',
                         class: 'form-control msg-content',
                         autocomplete: 'off',
                         data: { controller: 'trix', emoji_picker_target: 'trixEditor' } %>
    <%= f.submit data: { disable_with: false }, class: 'btn main-btn-primary' %>
  <% end %>
<% end %>
