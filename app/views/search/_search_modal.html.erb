<div class="search-modal modal" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="search-modal-dialog modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchModalLabel">
          Search Results
          <span data-bs-toggle="tooltip"
                data-bs-placement="top"
                data-bs-custom-class="custom-tooltip"
                data-bs-title="Use symbols before your search: #username, @email, $name"
                data-controller="bs-init-component" data-action="bs-init-component#bs_init">
          <i class="bi bi-question-circle"></i>
        </span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body mb-2">
        <%= render partial: 'search/form' %>
        <turbo-frame id="search_results">
          <%= render 'search/search_results', search_results: defined?(@search_results) ? @search_results : {} %>
        </turbo-frame>
      </div>
    </div>
  </div>
</div>
