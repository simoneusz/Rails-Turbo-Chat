<% pending_contacts = current_user.pending_contacts %>
<div class="request-list">
  <% unless pending_contacts.present? %>
    <h3>No contact request yet.</h3>
  <% end %>
  <% pending_contacts.each do |contact| %>
    <div class="request-item d-flex align-items-center justify-content-between mb-3 p-2 border rounded">
      <div class="d-flex align-items-center">
        <%= render partial: "shared/default_avatar", locals: { size: 25, user: contact.user, rounded: true} %>
        <span><%= contact.user.full_name %></span>
      </div>
      <div class="d-flex gap-2">
        <%= button_to "Decline", contact_path(contact.user), method: :delete, class: "btn  main-btn-secondary btn-sm" %>
        <%= button_to "Accept", contact_path(contact.user), method: :put, class: "btn main-btn-danger btn-sm" %>
      </div>
    </div>
  <% end %>
</div>