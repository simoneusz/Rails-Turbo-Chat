<div class="wrapper p-1 flex-grow-1">
  <div class="row flex-grow-1">
    <div class="col-8 flex-grow-1">
      <div class="tab-content contacts" id="myTabContent">
        <div class="tab-pane fade show active contacts-all" id="userContacts" role="tabpanel" aria-labelledby="userContacts-tab">
          <div class="contacts-all-actions mb-3">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addContactModal">
              Add Contact
            </button>
          </div>
          <div class="contact-list">
            <div class="contact-item d-flex align-items-center justify-content-between mb-3 p-2 border rounded">
              <div class="d-flex align-items-center">
                <img src="https://placehold.jp/150x150.png" alt="user" class="rounded-circle me-3" style="height: 40px;width: 40px">
                <span>John Doe</span>
              </div>
              <div>
                <button class="btn btn-outline-secondary btn-sm">Message</button>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="contactRequests" role="tabpanel" aria-labelledby="contactRequests-tab">
          <div class="request-list">
            <div class="request-item d-flex align-items-center justify-content-between mb-3 p-2 border rounded">
              <div class="d-flex align-items-center">
                <img src="https://placehold.jp/150x150.png" alt="user" class="rounded-circle me-3">
                <span>Jane Smith</span>
              </div>
              <div>
                <button class="btn btn-success btn-sm">Accept</button>
                <button class="btn btn-danger btn-sm">Reject</button>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-pane fade" id="outgoingRequests" role="tabpanel" aria-labelledby="outgoingRequests-tab">
          <div class="outgoing-list">
            <div class="outgoing-item d-flex align-items-center justify-content-between mb-3 p-2 border rounded">
              <div class="d-flex align-items-center">
                <img src="https://placehold.jp/150x150.png" alt="user" class="rounded-circle me-3">
                <span>Mark Johnson</span>
              </div>
              <div>
                <button class="btn btn-warning btn-sm">Cancel Request</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4 flex-grow-1">
      <div class="tabs">
        <ul class="nav nav-tabs tabs-list flex-column" id="myTab" role="tablist">
          <li class="nav-item flex-grow-0" role="presentation">
            <button class="nav-link active" id="userContacts-tab" data-bs-toggle="tab" data-bs-target="#userContacts" type="button" role="tab" aria-controls="userContacts" aria-selected="true">
              Your contacts
            </button>
          </li>
          <li class="nav-item flex-grow-0" role="presentation">
            <button class="nav-link" id="contactRequests-tab" data-bs-toggle="tab" data-bs-target="#contactRequests" type="button" role="tab" aria-controls="contactRequests" aria-selected="false">
              Contact requests
            </button>
          </li>
          <li class="nav-item flex-grow-0" role="presentation">
            <button class="nav-link" id="outgoingRequests-tab" data-bs-toggle="tab" data-bs-target="#outgoingRequests" type="button" role="tab" aria-controls="outgoingRequests" aria-selected="false">
              Outgoing requests
            </button>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>