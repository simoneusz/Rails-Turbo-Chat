<% participant = room.find_participant(current_user) %>
<%= button_to toggle_notifications_room_participant_path(room), method: :patch, params: { user_id: current_user.id }, class: 'btn border'  do %>
  <i class="bi bi-bell<%= "-slash-fill" if participant.mute_notifications? %>"
     data-bs-toggle="tooltip"
     data-bs-placement="top"
     data-bs-custom-class="custom-tooltip"
     data-bs-title="<%= participant.mute_notifications? ? "Notifications are disabled" : "Notifications are working" %>"
     data-controller="bs-init-component" data-action="bs-init-component#bs_init"></i>
<% end %>
